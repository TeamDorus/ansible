services:
  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    restart: unless-stopped
    environment:
      PUID: 1000
      PGID: 1000
    ports:
      - "9001:3000"
    volumes:
      - {{ homepage_volume_dir }}/config:/app/config
      - {{ homepage_volume_dir }}/images:/app/public/images
      - {{ homepage_volume_dir }}/icons:/app/public/icons
      #- /var/run/docker.sock:/var/run/docker.sock

