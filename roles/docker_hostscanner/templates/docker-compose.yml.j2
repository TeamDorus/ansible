---
version: "3"

services:

  hostscanner:
    container_name: hostscanner
    image: teamdorus/hostscanner:0.1.1
    restart: unless-stopped
    volumes:
      - "{{ hostscanner_volume_dir }}:/hostscanner"
    environment:
      - "DB_HOST={{ influxdb_host }}:8086"
      - "DB_NAMES=telegraf unifi"
      - MEASUREMENT=hoststate
      - STATE_TAG=state
      - TZ=Europe/Amsterdam
      - "CRON=*/5 * * * *"
      - DEBUG=1
