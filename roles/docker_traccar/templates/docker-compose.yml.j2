---
version: "3"

services:

  traccar:
    container_name: traccar
    image: traccar/traccar:latest
    restart: unless-stopped
    ports:
      - 8082:8082
      - 5000-5150:5000-5150
      - 5000-5150:5000-5150/udp
    volumes:
      - "{{ traccar_volume_dir }}/traccar.xml:/opt/traccar/conf/traccar.xml"
      - "{{ traccar_volume_dir }}/data:/opt/traccar/data"
    environment:
      - TZ=Europe/Amsterdam
