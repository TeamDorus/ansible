---
services:

  mysql:
    container_name: mysql
    restart: unless-stopped
    image: mysql:8.0
    hostname: mysql
    volumes:
      - {{ semaphore_volume_dir }}/mysql:/var/lib/mysql
    environment:
      MYSQL_RANDOM_ROOT_PASSWORD: 'yes'
      MYSQL_DATABASE: semaphore
      MYSQL_USER: semaphore
      MYSQL_PASSWORD: semaphore


  semaphore:
    container_name: semaphore
    restart: unless-stopped
    ports:
      - 3000:3000
    image: teamdorus/semaphore:0.2
    privileged: true  # required to mount SMB share within a container
    environment:
      SEMAPHORE_DB_USER: semaphore
      SEMAPHORE_DB_PASS: semaphore
      SEMAPHORE_DB_HOST: mysql 
      SEMAPHORE_DB_PORT: 3306 
      SEMAPHORE_DB_DIALECT: mysql 
      SEMAPHORE_DB: semaphore
      SEMAPHORE_PLAYBOOK_PATH: /tmp/semaphore/
      SEMAPHORE_ADMIN_PASSWORD: adminpass
      SEMAPHORE_ADMIN_NAME: admin
      SEMAPHORE_ADMIN_EMAIL: admin@localhost
      SEMAPHORE_ADMIN: admin
      SEMAPHORE_ACCESS_KEY_ENCRYPTION: gs72mPntFATGJs9qK0pQ0rKtfidlexiMjYCH9gWKhTU=
      SEMAPHORE_LDAP_ACTIVATED: 'no'
    volumes:
      - ~/certificates/:/tmp/semaphore/certificates/:ro
      - ~/.ansible/passwd.txt:/tmp/semaphore/.ansible/passwd.txt.read_only:ro
      - ~/.ansible/secrets.yml:/tmp/semaphore/.ansible/secrets.yml.read_only:ro
      - ~/.ssh/id_rsa:/tmp/semaphore/.ssh/id_rsa.read_only:ro
    depends_on:
      - mysql

