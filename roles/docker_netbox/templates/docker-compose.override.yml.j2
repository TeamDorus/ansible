---
version: '3.4'
services:
  netbox:
    restart: unless-stopped
    ports:
    - 80:8080
    volumes:
    - {{ media_dir }}:/opt/netbox/netbox/media:z

  netbox-worker:
    restart: unless-stopped

  netbox-housekeeping:
    restart: unless-stopped

  postgres:
    restart: unless-stopped
    volumes:
    - {{ postgres_dir }}:/var/lib/postgresql/data

  redis:
    restart: unless-stopped
    volumes:
    - {{ redis_dir }}:/data

  redis-cache:
    restart: unless-stopped
